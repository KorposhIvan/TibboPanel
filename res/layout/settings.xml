<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000000">
<GridLayout   android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="3"
                android:background="#5E5E5E">
    <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:text="@string/tvSetIp"
            android:id="@+id/tvIP"
            android:layout_row="0"
            android:layout_column="0"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:background="#f5f5f5"
            android:textAlignment="center"
            android:text="@string/tvSetIpDefault"
            android:id="@+id/etIP"
            android:layout_row="0"
            android:layout_column="1"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:text="@string/tvSetPort"
            android:id="@+id/tvPort"
            android:layout_row="1"
            android:layout_column="0"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:background="#f5f5f5"
            android:id="@+id/etPort"
            android:layout_row="1"
            android:layout_column="1"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:text="@string/tvSetIdRoom"
            android:id="@+id/tvIDroom"
            android:layout_row="2"
            android:layout_column="0"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:background="#f5f5f5"
            android:id="@+id/etIDroom"
            android:layout_row="2"
            android:layout_column="1"/>
</GridLayout>
</LinearLayout>