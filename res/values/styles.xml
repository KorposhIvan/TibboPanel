<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Style_main" parent="@android:style/Theme.Holo">
        <item name="android:background">#9E9E9E</item>
    </style>
    <style name="Style_second" parent="@android:style/Theme.Holo">
        <!--<item name="android:background">#F5F5F5</item>-->
        <item name="android:background">@drawable/background_with_shadow</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:radius">2dp</item>
    </style>
    <style name="Style_second_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#727272</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="Style_main_text" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#212121</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>
</resources>